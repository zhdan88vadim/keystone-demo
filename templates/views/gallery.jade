extends ../layouts/default

block css
	link(rel="stylesheet", href="/js/lib/fancybox/jquery.fancybox.css")
				
block content
	.page-header
		a(href='/keystone/galleries?new').btn.btn-default.pull-right= user ? 'Add Album' : 'Sign in to Add Album'
		h1 Gallery

	if galleries.length
		-- console.log('galleries', galleries)
		each gallery, i in galleries
			h3
				| #{gallery.name} 
				small.text-muted= gallery._.publishedDate.format('Do MMM YYYY')
			
			.row
				-- console.log(gallery.images)

				.col-xs-4.col-sm-3.col-md-2(style="margin-bottom: 30px;")
					a(href=gallery.images.filename, title=gallery.name + ' image ' + (i + 1), rel=gallery.key).gallery-image
						img(src=gallery.images.filename).img-thumbnail

				//each image, i in gallery.images
					.col-xs-4.col-sm-3.col-md-2(style="margin-bottom: 30px;")
						a(href=image, title=gallery.name + ' image ' + (i+1), rel=gallery.key).gallery-image
							img(src=image).img-thumbnail
		
	else
		.jumbotron.text-center
			h3(style="margin-bottom:0;margin-top:0;") There are no albums yet.


